@model PizzAkuten.Models.AdminDishViewModel

@{
    ViewData["Title"] = "Create";

}

<h2>Create</h2>

<h4>Dish</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Edit" asp-controller="Dish" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DishId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <input asp-for="ImagePath" type="hidden" />
            <img src="@Model.ImagePath" alt="Alternate Text" />
            <div class="form-group">
                <label>Välj en bild</label>
                <input type="file" name="file" />
            </div>
            <div class="form-group">
                @for (int i = 0; i < Model.Ingredients.Count; i++)
                {
                    <label asp-for="@Model.Ingredients[i].Name" class="control-label">@Model.Ingredients[i].Name</label>
                    <label asp-for="@Model.Ingredients[i].Price" class="control-label">@Model.Ingredients[i].Price kr</label>
                    <input asp-for="@Model.Ingredients[i].Name" value="@Model.Ingredients[i].Name" hidden />
                    <input asp-for="@Model.Ingredients[i].Price" value="@Model.Ingredients[i].Price" hidden />
                    <input asp-for="@Model.Ingredients[i].IngredientId" value="@Model.Ingredients[i].IngredientId" hidden />
                    <input asp-for="@Model.Ingredients[i].IsChecked" type="checkbox" value="true" />
                }

            </div>
            <div class="form-group">
                <label>Kategori</label>
                <input asp-for="Category" value="@Model.Category.Name" disabled />
            </div>
                <div class="form-group">
                    
                    <select asp-for="@Model.CategoryId" asp-items="@Model.SelectCategoryList">
                        <option>Välj ny kategori </option>
                    </select>
                </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

