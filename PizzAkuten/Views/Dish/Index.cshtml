@model IEnumerable<Dish>

@{
    ViewData["Title"] = "Rätter";
}

<h2>Rätter</h2>

<p>
    <a asp-action="Create">Skapa ny</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
             
                <a asp-action="Edit" asp-route-DishId="@item.DishId">Ändra</a> |
                <a asp-action="Delete" asp-route-DishId="@item.DishId">Ta bort</a>
            </td>
        </tr>
}
    </tbody>
</table>
